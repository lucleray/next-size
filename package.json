  "peerDependencies": {
    "next": ">=6"
  },
  "devDependencies": {
    "babel-eslint": "^10.0.1",
    "eslint": "^5.12.1",
    "eslint-config-prettier": "^3.6.0",
    "husky": "^2.3.0",
    "lint-staged": "^8.1.0",
    "next": "^7.0.2",
    "prettier": "^1.16.1"
  },
  "prettier": {
    "singleQuote": true,
    "semi": false
  },
  "eslintConfig": {
